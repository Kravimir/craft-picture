{# passed source and transformedImages #}
<source
  {% if source.media ?? false %}
    media="{{ source.media }}"
  {% endif %}
  {% if transformedImages %}
    srcset="
    {% for i in transformedImages %}
      {{ i.url }} {{ i.width }}w{% if not loop.last %},{% endif %}
    {% endfor %}
    "
  {% endif %}
  {% if source.sizes ?? false %}
    sizes="{{ source.sizes }}"
  {% endif %}
/>
